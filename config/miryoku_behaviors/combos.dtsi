            bindings = <&kp LPAR>;
        };    
        combo_esc {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <14 15>;
            bindings = <&kp ESC>;
        };

        combo_tab {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <13 14>;
            bindings = <&kp TAB>;
        };    

        combo_del {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <26 27>;
            bindings = <&kp DEL>;
        };    
        combo_enter{
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <40 41>;
            bindings = <&kp RET>;
        };    
    };
};
