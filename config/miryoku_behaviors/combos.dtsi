#define TIMEOUT_MS 40
#define WAIT_MS 180
/ { 
    combos {
        compatible = "zmk,combos";
        combo_caps_word {
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <16 19>;
            bindings = <&caps_word>;
        };

       combo_minus {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <9 10>;
            bindings = <&kp MINUS>;
        };

        combo_equal {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <21 22>;
            bindings = <&kp EQUAL>;
        };

        combo_under {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <35 36>;
            bindings = <&kp UNDER>;
       };

        combo_bracket_close {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <7 8>;
            bindings = <&kp RBKT>;
        };


        combo_braces_close {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <19 20>;
            bindings = <&kp RBRC>;
        };


        combo_paran_close {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <33 34>;
            bindings = <&kp RPAR>;
        };   


       combo_single_quote {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <8 9>;
            bindings = <&kp SQT>;
        };

        combo_double_quote {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <20 21>;
            bindings = <&kp DQT>;
        };    

        combo_back_ticks {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <34 35>;
            bindings = <&kp GRAVE>;
        };   



        combo_bracket_open {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <3 4>;
            bindings = <&kp LBKT>;
        };
        combo_braces_open {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <15 16>;
            bindings = <&kp LBRC>;
