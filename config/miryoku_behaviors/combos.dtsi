#define TIMEOUT_MS 50
#define WAIT_MS 180

/ { 
    combos {

        compatible = "zmk,combos";

        combo_caps_word {
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <16 19>;
            bindings = <&caps_word>;   
            layers = <0>;
        };

       combo_minus {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <9 10>;
            bindings = <&kp MINUS>;
            layers = <0>;
        };

        combo_equal {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <21 22>;
            bindings = <&kp EQUAL>;
            layers = <0>;
        };

        combo_under {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <35 36>;
            bindings = <&kp UNDER>;
            layers = <0>;
       };

        combo_bracket_close {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
            key-positions = <7 8>;
            bindings = <&kp RBKT>;
            layers = <0>;
        };

        combo_braces_close {
            require-prior-idle-ms = <WAIT_MS>;
            timeout-ms = <TIMEOUT_MS>;
